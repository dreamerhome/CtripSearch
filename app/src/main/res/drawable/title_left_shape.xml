<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:constantSize="true">
    <item android:state_selected="true">
        <shape>
            <corners
                android:bottomLeftRadius="@dimen/top_layout_radius"
                android:topLeftRadius="@dimen/top_layout_radius"></corners>
            <solid android:color="@color/ctirp_color_white"></solid>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <corners
                android:bottomLeftRadius="@dimen/top_layout_radius"
                android:topLeftRadius="@dimen/top_layout_radius"></corners>
            <solid android:color="@color/ctirp_color_white"></solid>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners
                android:bottomLeftRadius="@dimen/top_layout_radius"
                android:topLeftRadius="@dimen/top_layout_radius"></corners>
            <solid android:color="@color/ctirp_color_white"></solid>
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:bottomLeftRadius="@dimen/top_layout_radius"
                android:topLeftRadius="@dimen/top_layout_radius"></corners>
            <solid android:color="@color/ctirp_color_primary"></solid>
            <stroke android:color="@color/ctirp_color_white" android:width="1dp"/>
        </shape>
    </item>
</selector>